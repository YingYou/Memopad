<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/title_bg_footer"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentBottom="true">

        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                android:id="@+id/pen_imageView"
                android:src="@drawable/iconfont_pen"/>

        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/huabi_imageView"
                   android:src="@drawable/iconfont_huabi"/>

        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/eraser_imageView"
                   android:src="@drawable/iconfont_eraser"/>

        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/color_imageView"
                   android:src="@drawable/iconfont_color"/>
                    </LinearLayout>
</RelativeLayout>