            android:name="com.test.memopad.MemoPadApplication"
            android:theme="@style/Theme.TranslucentActionBar">
        <activity android:name="com.test.memopad.activity.HomeActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <!--android:theme="@style/Theme.TranslucentActionBar.ActionBar.Overlay"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.test.memopad.activity.NewPadActivity"></activity>
        <activity android:name=".activity.PaintViewActivity"></activity>
        <activity android:name="com.test.memopad.activity.ColorChoiceActivity"></activity>
    </application>
